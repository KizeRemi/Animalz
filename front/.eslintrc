{
    "settings": {
        "react": {
            "version": "16.4.2"
        }
    },
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "jest": true,
        "node": true
    }, 
    "extends": [
        "airbnb"
    ],
    "parser": "babel-eslint",
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "strict": 0,
        "semi": 2,
        "no-multiple-empty-lines": [2, {
            "max": 1
        }],
        "import/no-extraneous-dependencies": 0,
        "import/prefer-default-export": 0,
        "react/destructuring-assignment": 0,
        "react/no-did-update-set-state": 0,
        "max-len": [2, {"code": 130}]
    }
}
